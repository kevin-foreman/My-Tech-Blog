{{!-- Main single post page --}}
<article class="post">
    <div class="title">
        <a>{{post.title}}</a>
    </div>
    <div>
        <a>{{post.post_content}}</a>
    </div>
    <div class="meta">
        by {{post.User.username}} on
        {{post.created_at}}
    </div>
</article>

{{!-- Comment form inside single post page, after clicked --}}
{{!-- Make the comment form visible only if a user is logged in --}}
{{#if loggedIn}}
<form class="comment-form">
    <div>
        <textarea name="comment-body"></textarea>
    </div>

    <div>
        <button type="submit">add comment</button>
    </div>
</form>
{{/if}}

<div class="comments">
    {{#each post.comments}}
    <section class="comment">
        <div class="meta">
            {{user.username}} on {{created_at}}
        </div>
        <div class="text">
            {{comment_text}}
        </div>
    </section>
    {{/each}}
</div>

{{!-- Hide the script elements from non logged in users as well --}}
{{#if loggedIn}}
<script src="/javascript/comment.js"></script>
{{/if}}