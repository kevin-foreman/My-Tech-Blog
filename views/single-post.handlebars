{{!-- Main single post page --}}
<article class="post">
    <div class="title">
        <a>{{post.title}}</a>
    </div>
    <div>
        <a>{{post.post_content}}</a>
    </div>
    <div class="meta">
        by {{post.User.username}} on
        {{post.created_at}}
    </div>
</article>

{{!-- Comment form inside single post page, after clicked --}}
<form class="comment-form">
    <div>
        <textarea name="comment-body"></textarea>
    </div>

    <div>
        <button type="submit">add comment</button>
    </div>
</form>

<div class="comments">
    {{#each post.comments}}
    <section class="comment">
        <div class="meta">
            {{post.User.username}} on {{created_at}}
        </div>
        <div class="text">
            {{comment_text}}
        </div>
    </section>
    {{/each}}
</div>