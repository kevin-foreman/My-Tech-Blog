<ol class="post-list">
    {{#each posts}}
    <li>
        <article class="post">
            <div class="title">
                <a href="{{post_content}}" target="_blank">{{title}}</a>
                <span>({{post_content}})</span>
            </div>
            <div class="meta">
                by {{User.username}} on
                {{created_at}}
            </div>
        </article>
    </li>
    {{/each}}
</ol>

